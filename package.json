{
  "name": "exzly",
  "version": "0.0.1",
  "description": "Express.js starter kit for building scalable monolith applications",
  "main": "main.js",
  "type": "commonjs",
  "keywords": [
    "node.js",
    "express.js",
    "boilerplate",
    "full-stack"
  ],
  "author": "Agung Dirgantara <agungmasda29@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node --experimental-vm-modules --no-warnings main.js",
    "start:dev": "nodemon",
    "db:demo": "sequelize-cli db:migrate --name base.js && sequelize-cli db:seed --seed demo",
    "db:start": "sequelize-cli db:migrate --name base.js && sequelize-cli db:seed --seed start",
    "predb:test": "npx sequelize-cli db:migrate:undo --env test",
    "db:test": "sequelize-cli db:migrate --name all.js --env test && sequelize-cli db:seed --seed demo --env test",
    "lint": "eslint .",
    "format": "prettier --write --ignore-unknown .",
    "prepare": "husky",
    "test": "node --experimental-vm-modules --no-warnings ./node_modules/jest/bin/jest --verbose --detectOpenHandles",
    "test:cov": "node --experimental-vm-modules --no-warnings ./node_modules/jest/bin/jest --coverage --verbose --detectOpenHandles",
    "test:watch": "node --experimental-vm-modules --no-warnings ./node_modules/jest/bin/jest --watch --verbose --detectOpenHandles"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  },
  "_moduleAliases": {
    "@exzly-config": "./src/config",
    "@exzly-helpers": "./src/helpers",
    "@exzly-middlewares": "./src/middlewares",
    "@exzly-models": "./src/models",
    "@exzly-routes": "./src/routes",
    "@exzly-utils": "./src/utils",
    "@exzly-validators": "./src/validators",
    "@exzly-websocket": "./src/websocket"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "cli-table3": "^0.6.5",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "debug": "^4.4.1",
    "dotenv": "^16.5.0",
    "express": "^4.21.1",
    "express-list-endpoints": "^7.1.1",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-unless": "^2.1.3",
    "express-validator": "^7.2.0",
    "file-type": "^21.0.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mime": "^3.0.0",
    "module-alias": "^2.2.3",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "multer": "^2.0.0",
    "mysql2": "^3.14.1",
    "nodemailer": "^7.0.3",
    "nunjucks": "^3.2.4",
    "qs": "^6.14.0",
    "sequelize": "^6.37.7",
    "session-file-store": "^1.5.0",
    "sharp": "^0.34.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@faker-js/faker": "^9.8.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.17",
    "@types/mime": "^2.0.3",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/ms": "^2.1.0",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/nunjucks": "^3.2.6",
    "@types/sequelize": "^4.28.20",
    "@types/session-file-store": "^1.2.5",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.28.0",
    "form-data": "^4.0.3",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "prettier": "3.5.3",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.1"
  }
}
